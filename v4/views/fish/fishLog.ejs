<div id="fishlog">
  <a href="#addFishModal" data-toggle="modal" style="float:right;">+ Add a fish</a>
  
  <h1>{{=fishes.length}} fish</h1>
  <table class="table table-striped table-bordered table-condensed">
    <thead>
      <th>Fish</th>
      <th>Weight</th>
    </thead>
    <tbody>
    {{ for(var n=0, count=fishes.length; n<count; n++) {
      var fish = fishes[n]; }}
      <tr>
        <td>{{=fish.fish}}</td>
        <td>{{=fish.weight_lbs}} lbs {{=fish.weight_oz}} oz</td>
      </tr>
    {{ } }}
    </tbody>
  </table>
</div>

{{-partial("add") }}