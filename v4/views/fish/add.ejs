<form method="post" action="/fish/add">
<div id="addFishModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="width:auto;">
  <div class="modal-body">
      <table>
        <tr>
          <td>
            <label for="fish-type">Fish</label>
          </td>
          <td>
            <select id="fish-type" name="fish-type"><option value='gudgeon'>Gudgeon</option><option value='perch'>Perch</option><option value='tench'>Tench</option><option value='pike'>Pike</option><option value='carp'>Carp</option><option value='roach'>Roach</option><option value='bream'>Bream</option>
            </select>
          </td>
        </tr>
        <tr>
          <td>Weight</td>
          <td>
            <select id="fish-weight-lbs" name="fish-weight-lbs" class="default-width">
              {{ for(var i=0; i<100; i++) { }}
                <option value='{{=i}}'>{{=i}}</option>
              {{ } }}
            </select>
            <span>&#160;lbs&#160;</span>
            <select id="fish-weight-oz" name="fish-weight-oz" class="default-width">
              {{ for(var i=0; i<16; i++) { }}
                <option value='{{=i}}'>{{=i}}</option>
              {{ } }}
            </select>
            <span>&#160;oz</span>
          </td>
        </tr>
        <tr>
          <td>
            <td></td>
          </td>
        </tr>
      </table>
    
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
    <button class="btn btn-primary" id="btn-add-fish">Add fish</button>
  </div>
</div>
</form>

<script>
$(document).ready(function() {
  $("btn-add-fish").click(function(event) {
    $.ajax({
      type: "POST",
      url: "/fish/add",
      data: {name:"John", location:"Boston"}
    }).success(function(data, status, x) {
      //
    });
  });
});
</script>